<div id="toReport" class="panel-body" style="margin: auto; text-align:center !important; width:100%; height:100%">
    <div class="panel-heading" style="text-align:center">
        <br />
        <div class="panel-title">
            <text style="text-align:center !important; text-decoration: none; font-size:30px; font-weight:bold"><span>Bangjin Group</span></text><br>
            @*<text style="text-align:center !important; text-decoration: none; font-size:30px; font-weight:bold"><span>@ViewBag.CompanyName</span></text><br>*@
            <text style="text-align:center !important; text-decoration: none; font-size:15px; font-weight:normal">
                Tower Hamlet (13th Floor), 16, Kamal Ataturk Avenue, Banani-C/A, Dhaka 1213, Bangladesh, Tel: 8802222274025
            </text><br>
            <text style="text-align:center !important; text-decoration: none; font-size:25px; font-weight:normal">
                <b>Billing Information</b>
            </text>
        </div>
    </div>
    <br />
    <div class="panel-body" style="text-align:center;">
        <table cellpadding="5" cellspacing="1" style="width: 100%; border: 1px solid; border-collapse: collapse;" id="report">
            <tbody id="tbodyId">
                <tr style="background-color: #dae8f7; color: #5D7B9D;border:1px solid">
                    <th style="text-align: center; border: 1px solid; font-size: 17px">Sl</th>
                    <th style="text-align: center; border: 1px solid; font-size: 17px"><b>Company Name</b></th>
                    <th style="text-align: center; border: 1px solid; font-size: 17px"><b>Customer Name</b></th>
                    <th style="text-align: center; border: 1px solid; font-size: 17px"><b>Responsible Person</b></th>
                    <th style="text-align: center; border: 1px solid; font-size: 17px"><b>Invoice No</b></th>
                    <th style="text-align: center; border: 1px solid; font-size: 17px"><b>Entry Date</b></th>
                    <th style="text-align: center; border: 1px solid; font-size: 17px"><b>Bill Amount</b></th>
                    <th style="text-align: center; border: 1px solid; font-size: 17px"><b>Status</b></th>
                </tr>
                @foreach (var item in Model)
                {
                    sl++;
                    var date = item.EntryDate.ToString("dd/MMM/yyyy");
                    <tr style=" border: 1px solid; ">
                        <td style="width: 50px; text-align: center; border: 1px solid; font-size: 17px">
                            @sl
                        </td>
                        <td style="width: 300px; text-align: left; border: 1px solid; font-size: 17px">
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td style="width: 650px; text-align: left; border: 1px solid; font-size: 17px">
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td style="width: 300px; text-align: left; border: 1px solid; font-size: 17px">
                            @Html.DisplayFor(modelItem => item.AssignPerson)
                        </td>
                        <td style="width: 117px; text-align: left; border: 1px solid; font-size: 17px">
                            @Html.DisplayFor(modelItem => item.InvoiceNo)
                        </td>
                        <td style="width: 60px; text-align: center; border: 1px solid; font-size: 17px">
                            @date
                        </td>
                        <td style="width: 300px; text-align: left; border: 1px solid; font-size: 17px">
                            @Html.DisplayFor(modelItem => item.BillAmount)
                        </td>
                        <td style="width: 300px; text-align: left; border: 1px solid; font-size: 17px">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
